<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_margin="20dp"
        android:background="@color/bg_gray"
        android:orientation="vertical" >

        <!-- Full name label -->
        <!-- Full name -->

        <EditText
            android:id="@+id/registeredEmail"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="35dp"
            android:autoText="false"
            android:background="@color/bg_gray"
            android:hint="Your Email"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@color/txt_color_gray" />

        <!-- Email label -->

        <EditText
            android:id="@+id/changeBase1"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_margin="0dp"
            android:background="@drawable/edittext_login_box_base"
            android:cursorVisible="false"
            android:enabled="false"
            android:inputType="none" />

        <!-- Email -->

          <EditText
            android:id="@+id/oldPin"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="15dp"
            android:background="@color/bg_gray"
            android:hint="Type in your old PIN"
            android:inputType="number"
            android:maxLength="5"
            android:password="true"
            android:textColor="@color/txt_color_gray" />


        <!-- Pin label -->

        <EditText
            android:id="@+id/changeBase2"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_margin="0dp"
            android:background="@drawable/edittext_login_box_base"
            android:cursorVisible="false"
            android:enabled="false"
            android:inputType="none" />
        <!-- PIN -->

        <EditText
            android:id="@+id/newPin"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="15dp"
            android:background="@color/bg_gray"
            android:hint="Choose new 5 digit PIN"
            android:inputType="number"
            android:maxLength="5"
            android:password="true"
            android:textColor="@color/txt_color_gray" />

        <EditText
            android:id="@+id/changeBase3"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_margin="0dp"
            android:background="@drawable/edittext_login_box_base"
            android:cursorVisible="false"
            android:enabled="false"
            android:inputType="none" />
        
        <EditText
            android:id="@+id/confirmNewPin"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="15dp"
            android:background="@color/bg_gray"
            android:hint="Confirm new PIN"
            android:inputType="number"
            android:maxLength="5"
            android:password="true"
            android:textColor="@color/txt_color_gray" />

        <EditText
            android:id="@+id/changeBase4"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_margin="0dp"
            android:background="@drawable/edittext_login_box_base"
            android:cursorVisible="false"
            android:enabled="false"
            android:inputType="none" />

        <Button
            android:id="@+id/btnChange"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_yellow"
            android:text="@string/change_pin"
            android:textColor="@color/login_btn_text_color"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>