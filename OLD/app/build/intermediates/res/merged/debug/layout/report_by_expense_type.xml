<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:gravity="center|top"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="right" >

            <TextView
                android:id="@+id/txtStartDateExp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="Start"
                android:textColor="@color/txt_color_gray"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnPickStartDateExp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_kalendar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="right" >

            <TextView
                android:id="@+id/txtEndDateExp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="End"
                android:textColor="@color/txt_color_gray"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnPickEndDateExp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_kalendar" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnExpenseType"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_gray"
        android:singleLine="true"
        android:text="@string/expense_prompt"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnSearchByExp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_yellow"
        android:text="@string/search"
        android:textSize="18sp" />

</LinearLayout>